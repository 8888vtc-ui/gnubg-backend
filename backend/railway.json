{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "echo 'Backend build completed'",
    "watchPatterns": [
      "**"
    ]
  },
  "deploy": {
    "startCommand": "node src/simple-server.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "nixpacks": {
    "nodeVersion": "18"
  }
}
