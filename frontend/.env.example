# Production Environment Variables - TEMPLATE
# Copy this file to .env and fill in your actual values

# Backend API URLs
VITE_API_BASE_URL=https://your-backend-url.railway.app
VITE_WS_BASE_URL=wss://your-backend-url.railway.app

# Development fallback (localhost)
VITE_DEV_API_BASE_URL=http://localhost:3000
VITE_DEV_WS_BASE_URL=ws://localhost:3000

# AI API Keys
VITE_CLAUDE_API_KEY=your-claude-api-key-here
VITE_OPENAI_API_KEY=your-openai-api-key-here
VITE_REPLICATE_API_TOKEN=your-replicate-api-token-here

# App Configuration
VITE_APP_NAME=GammonGuru
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Real-time Backgammon with AI Coaching

# Feature Flags
VITE_ENABLE_CLAUDE=true
VITE_ENABLE_OPENAI=true
VITE_ENABLE_IMAGE_GENERATION=true
VITE_ENABLE_WEBSOCKET=true

# WebSocket Configuration
VITE_WS_RECONNECT_DELAY=1000
VITE_WS_MAX_RECONNECT_ATTEMPTS=5
VITE_WS_CONNECTION_TIMEOUT=10000
